<div class="watchDiv">
  <div class="userCards">
    <%if(!user.watched[0]) {%>
      <p><%=user.username%> is not currently being watched by anyone.</p>
    <%} else {
      for(let i = 0; i <= 6; i++) {
        let thisUser = user.watched[i]
        if(thisUser) {
          let thisImg = allUsers.find(users => users.id == thisUser._id).img%>
        <a href='/userpage/<%=thisUser._id%>' class="miniUserCard <%if(user.watched.length >= 6) {%>fullList<%}%>">
          <img src="<%=thisImg%>" alt="<%=thisUser.username%>'s Pic'">
          <h4><%=thisUser.username%></h4>
          <h5><%=thisUser.location%></h5>
        </a>
        <%} else {
          break
        }
       }
      }%>
  </div>
  <%if(user.watched.length > 6) {%>
    <a href="/watching/<%=user._id%>">
    <p>View All</p>
    </a>
  <%}%>
</div>
