<html lang="en" dir="ltr">
  <%-include('./partials/head.ejs')%>
  <body>
    <%-include('./partials/header.ejs')%>
    <%-include('./partials/nav.ejs')%>
    <h1>Watchers</h1>
    <div class="watchingFullDiv">
      <%if(!user.watched[0]) {%>
        <h3><%=user.username%> is not currently being watched by anyone.</h3>
      <%} else {
        for(let i = 0; i < user.watched.length; i++) {
          let thisUser = user.watched[i]%>
          <a href='/userpage/<%=thisUser._id%>' class="miniUserCard">
            <img src="https://i.imgur.com/GM7Y8x0m.png" alt="<%=thisUser.username%>'s Pic'">
            <h4><%=thisUser.username%></h4>
            <h5><%=thisUser.location%></h5>
          </a>
        <%}%>
      <%}%>
    </div>
    <%-include('./partials/footer.ejs')%>
  </body>
</html>
