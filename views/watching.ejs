<html lang="en" dir="ltr">
  <%-include('./partials/head.ejs')%>
  <body>
    <%-include('./partials/header.ejs')%>
    <%-include('./partials/nav.ejs')%>
    <div class="watchFullPage">
      <div class="watchingFullDiv">
        <h1>Watching</h1>
        <div class="userCards" id="fullPageWatchCards">
          <%if(!user.watching[0]) {%>
            <h3><%=user.username%> is not currently watching anybody</h3>
          <%} else {
            for(let i = 0; i < user.watching.length; i++) {
              let thisUser = user.watching[i]
              let thisImg = allUsers.find(users => users.id == thisUser._id).img%>
              <a href='/userpage/<%=thisUser._id%>' class="miniUserCard">
                <img src="<%=thisImg%>" alt="<%=thisUser.username%>'s Pic" class='miniUserPic'>
                <h4><%=thisUser.username%></h4>
                <h5><%=thisUser.location%></h5>
              </a>
            <%}%>
          <%}%>
        </div>
      </div>
      <%-include('./partials/footer.ejs')%>
    </div>
  </body>
</html>
